<%- include('../partials/head') %>

<body class="relative overflow-x-hidden bg-gradient-to-br from-black via-slate-900 to-black text-white min-h-screen flex flex-col">

<%- include('../partials/nav') %>

<main class="flex-1 flex items-center justify-center px-6 py-32">

  <!-- ================= FORM CONTAINER ================= -->
  <section
    class="relative w-full max-w-lg
           bg-white/10 backdrop-blur-xl
           border border-white/20
           rounded-[2.5rem] p-12
           shadow-[0_60px_120px_-40px_rgba(0,0,0,0.9)]">

    <!-- HEADER -->
    <div class="mb-12 text-center">
      <h1 class="text-4xl font-black tracking-tight mb-3">
        List your
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-pink-600">
          home
        </span>
      </h1>

      <p class="text-gray-400 text-lg leading-relaxed">
        Share your space with trusted travelers
        and start hosting with confidence.
      </p>
    </div>

    <!-- FORM -->
    <form action="/host/add-home" method="POST" class="space-y-7">

      <!-- Home Name -->
      <div>
        <label class="block text-sm font-medium text-gray-400 mb-2">
          Home name
        </label>
        <input
          type="text"
          name="houseName"
          placeholder="Cozy beach house"
          required
          class="w-full px-5 py-4 rounded-xl
                 bg-black/40 border border-white/10
                 text-white placeholder-gray-500
                 focus:outline-none focus:ring-2 focus:ring-rose-500
                 transition-all"
        />
      </div>

      <!-- Price -->
      <div>
        <label class="block text-sm font-medium text-gray-400 mb-2">
          Price per night (₹)
        </label>
        <input
          type="number"
          name="price"
          placeholder="5000"
          required
          class="w-full px-5 py-4 rounded-xl
                 bg-black/40 border border-white/10
                 text-white placeholder-gray-500
                 focus:outline-none focus:ring-2 focus:ring-rose-500
                 transition-all"
        />
      </div>

      <!-- Location -->
      <div>
        <label class="block text-sm font-medium text-gray-400 mb-2">
          Location
        </label>
        <input
          type="text"
          name="location"
          placeholder="Goa, India"
          required
          class="w-full px-5 py-4 rounded-xl
                 bg-black/40 border border-white/10
                 text-white placeholder-gray-500
                 focus:outline-none focus:ring-2 focus:ring-rose-500
                 transition-all"
        />
      </div>

      <!-- Rating -->
      <div>
        <label class="block text-sm font-medium text-gray-400 mb-2">
          Rating
        </label>
        <input
          type="number"
          step="0.1"
          name="rating"
          placeholder="4.8"
          required
          class="w-full px-5 py-4 rounded-xl
                 bg-black/40 border border-white/10
                 text-white placeholder-gray-500
                 focus:outline-none focus:ring-2 focus:ring-rose-500
                 transition-all"
        />
      </div>

      <!-- Image URL -->
      <div>
        <label class="block text-sm font-medium text-gray-400 mb-2">
          Photo URL
        </label>
        <input
          type="text"
          name="photoUrl"
          placeholder="https://image-link.jpg"
          required
          class="w-full px-5 py-4 rounded-xl
                 bg-black/40 border border-white/10
                 text-white placeholder-gray-500
                 focus:outline-none focus:ring-2 focus:ring-rose-500
                 transition-all"
        />
      </div>

      <!-- SUBMIT -->
      <button
        type="submit"
        class="w-full mt-6 py-4 rounded-2xl
               font-semibold text-lg
               bg-gradient-to-r from-rose-500 to-pink-600
               shadow-[0_0_60px_rgba(244,63,94,0.7)]
               hover:scale-[1.03]
               transition-all duration-500">
        Publish listing
      </button>

    </form>

    <!-- BACK -->
    <div class="text-center mt-10">
      <a
        href="/"
        class="text-sm text-gray-400
               hover:text-white transition-all">
        ← Back to home
      </a>
    </div>

  </section>

</main>

<footer class="mt-24 text-center text-gray-500 text-sm">
  © 2025 Airbnb Clone • Designed with intent
</footer>

</body>
</html>
