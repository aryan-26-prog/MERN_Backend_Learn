<%- include('../partials/head') %>

<body class="relative overflow-x-hidden bg-gradient-to-br from-black via-slate-900 to-black text-white">

<%- include('../partials/nav') %>

<main class="relative z-10 px-6 py-32 space-y-32">

<!-- ================= PAGE INTRO ================= -->
<section class="max-w-7xl mx-auto space-y-6">
  <h1 class="text-4xl md:text-5xl font-black tracking-tight">
    Your saved
    <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-pink-600">
      favourites
    </span>
  </h1>

  <p class="text-gray-400 text-lg max-w-2xl leading-relaxed">
    A private collection of homes you’ve shortlisted.
    Revisit, compare, and book when the moment feels right.
  </p>
</section>

<!-- ================= EMPTY STATE ================= -->
<% if (registeredHomes.length === 0) { %>

<section class="max-w-3xl mx-auto text-center mt-32 space-y-8">
  <p class="text-gray-400 text-xl">
    You haven’t saved any homes yet.
  </p>

  <a href="/homes"
     class="inline-block px-12 py-5 rounded-2xl font-semibold
            bg-gradient-to-r from-rose-500 to-pink-600
            shadow-[0_0_80px_rgba(244,63,94,0.7)]
            hover:scale-105 transition-all duration-500">
    Explore homes
  </a>
</section>

<% } else { %>

<!-- ================= HOMES GRID ================= -->
<section class="max-w-7xl mx-auto space-y-16">

  <h2 class="text-3xl font-black text-center">
    Available <span class="text-rose-500">Homes</span>
  </h2>

  <% if (registeredHomes.length === 0) { %>
    <p class="text-center text-gray-400 text-lg">
      No homes available yet. Start by adding your first listing.
    </p>
  <% } %>

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-14">

    <% registeredHomes.forEach(home => { %>

      <!-- CARD -->
      <div class="group [perspective:1200px]">
        <div class="bg-white/10 backdrop-blur-xl border border-white/10
                    rounded-[2.5rem] overflow-hidden
                    transform transition-all duration-700
                    group-hover:-translate-y-4
                    group-hover:[transform:rotateX(6deg)_rotateY(-6deg)]
                    shadow-[0_40px_80px_-20px_rgba(0,0,0,0.9)]">

          <!-- Image -->
          <div class="h-56 overflow-hidden">
            <img
              src="<%= home.photoUrl %>"
              alt="<%= home.houseName %>"
              class="w-full h-full object-cover
                     transition-transform duration-500
                     group-hover:scale-110"
            />
          </div>

          <!-- Content -->
          <div class="p-6 space-y-4">
            <h3 class="text-xl font-semibold">
              <%= home.houseName %>
            </h3>

            <p class="text-gray-400 text-sm">
              <%= home.location %>
            </p>

            <div class="flex items-center justify-between pt-2">
              <p class="text-rose-500 font-bold text-lg">
                ₹ <%= home.price %> / night
              </p>

              <p class="text-sm font-semibold text-gray-300">
                <%= home.rating %> ★
              </p>
            </div>

            <a href="/bookings"
               class="block text-center mt-4
                      bg-black/60 hover:bg-black/80
                      text-white font-semibold py-3 rounded-xl
                      transition-all duration-300">
              Book Now
            </a>
          </div>

        </div>
      </div>

    <% }) %>

  </div>
</section>

<% } %>

</main>

<footer class="relative z-10 mt-40 text-center text-gray-500 text-sm">
  © 2025 Airbnb Clone • Designed with intent
</footer>

</body>
</html>
