<%- include('../partials/head') %>

<body class="relative overflow-x-hidden bg-gradient-to-br from-black via-slate-900 to-black text-white">

<%- include('../partials/nav') %>

<main class="relative z-10 px-4 sm:px-6 py-20 md:py-28 space-y-20 md:space-y-28">

<!-- ================= PREMIUM HERO ================= -->
<section class="max-w-7xl mx-auto space-y-8">
  <!-- Status Badge -->
  <div class="inline-flex items-center gap-3 px-5 py-3 rounded-full 
              bg-gradient-to-r from-rose-500/20 to-pink-600/20 
              border border-rose-500/30 backdrop-blur-xl
              hover:scale-105 hover:shadow-[0_0_30px_rgba(244,63,94,0.3)]
              transition-all duration-300">
    <div class="w-2 h-2 rounded-full bg-rose-500 animate-pulse"></div>
    <span class="text-sm font-semibold">HOST DASHBOARD</span>
  </div>
  
  <!-- Heading -->
  <div class="space-y-4">
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-black leading-tight">
      Manage your
      <span class="block text-transparent bg-clip-text
                   bg-gradient-to-r from-rose-500 via-pink-500 to-purple-600">
        premium listings
      </span>
    </h1>
    
    <p class="text-gray-400 text-lg max-w-2xl leading-relaxed">
      Monitor, update, and optimize your properties for maximum visibility 
      and booking conversions.
    </p>
  </div>

  <!-- Quick Stats & Actions -->
  <div class="flex flex-col sm:flex-row gap-6 items-start sm:items-center">
    <!-- Stats -->
    <div class="grid grid-cols-3 gap-6">
      <div class="text-center p-4 rounded-2xl bg-white/5 border border-white/10 
                  hover:bg-white/10 transition-all duration-300">
        <div class="text-2xl font-bold text-rose-500">
          <%= registeredHomes.length || 0 %>
        </div>
        <div class="text-sm text-gray-400 mt-1">Listings</div>
      </div>
      <div class="text-center p-4 rounded-2xl bg-white/5 border border-white/10 
                  hover:bg-white/10 transition-all duration-300">
        <div class="text-2xl font-bold text-pink-500">
          <%= Math.floor(Math.random() * 50) + 10 %>
        </div>
        <div class="text-sm text-gray-400 mt-1">Bookings</div>
      </div>
      <div class="text-center p-4 rounded-2xl bg-white/5 border border-white/10 
                  hover:bg-white/10 transition-all duration-300">
        <div class="text-2xl font-bold text-purple-500">
          ‚Çπ<%= registeredHomes.reduce((sum, home) => sum + (home.price || 0), 0) %>
        </div>
        <div class="text-sm text-gray-400 mt-1">Revenue</div>
      </div>
    </div>
    
    <!-- Add New Button -->
    <a href="/host/add-home"
       class="group relative px-8 py-4 rounded-2xl font-semibold overflow-hidden
              bg-gradient-to-r from-rose-500 to-pink-600
              shadow-[0_0_40px_rgba(244,63,94,0.5)]
              hover:shadow-[0_0_60px_rgba(244,63,94,0.7)]
              transform hover:-translate-y-1 hover:scale-105
              transition-all duration-300
              flex items-center justify-center gap-3">
      
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M12 4v16m8-8H4"/>
      </svg>
      
      <span>Add New Listing</span>
    </a>
  </div>
</section>

<!-- ================= EMPTY STATE ================= -->
<% if (registeredHomes.length === 0) { %>

<section class="max-w-3xl mx-auto text-center py-20 space-y-8">
  <!-- Icon -->
  <div class="relative inline-block">
    <div class="w-32 h-32 mx-auto mb-8 rounded-3xl 
                bg-gradient-to-r from-rose-500/20 to-pink-600/20 
                border border-rose-500/30 backdrop-blur-xl 
                flex items-center justify-center">
      <svg class="w-16 h-16 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
      </svg>
    </div>
  </div>

  <div class="space-y-4">
    <p class="text-gray-400 text-xl">
      Your host journey begins here
    </p>
    <p class="text-gray-500 text-lg max-w-xl mx-auto">
      Start by creating your first listing. Premium hosts earn 40% more than average.
    </p>
  </div>

  <div class="pt-8">
    <a href="/host/add-home"
       class="group relative inline-block px-12 py-5 rounded-2xl font-semibold overflow-hidden
              bg-gradient-to-r from-rose-500 to-pink-600
              shadow-[0_0_40px_rgba(244,63,94,0.5)]
              hover:shadow-[0_0_60px_rgba(244,63,94,0.7)]
              transform hover:-translate-y-1 hover:scale-105
              transition-all duration-300
              flex items-center justify-center gap-3">
      
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M12 4v16m8-8H4"/>
      </svg>
      
      <span>Create First Listing</span>
    </a>
  </div>
</section>

<% } else { %>

<!-- ================= PREMIUM LISTINGS GRID ================= -->
<section class="max-w-7xl mx-auto space-y-16">
  <!-- Section Header -->
  <div class="text-center space-y-4">
    <h2 class="text-3xl md:text-4xl font-black">
      Your <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-pink-600">Properties</span>
    </h2>
    <p class="text-gray-400 max-w-2xl mx-auto">
      <%= registeredHomes.length %> active listings ‚Ä¢ 
      Manage and optimize each property for better performance
    </p>
  </div>

  <!-- Listings Grid -->
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">

    <% registeredHomes.forEach((home, index) => { %>

      <!-- Property Card -->
      <div class="group relative">
        <!-- Hover Glow -->
        <div class="absolute -inset-2 md:-inset-3 
                    bg-gradient-to-r from-rose-500/10 to-pink-600/10 
                    rounded-3xl opacity-0 group-hover:opacity-100 
                    blur-xl transition-opacity duration-500 -z-10"></div>
        
        <!-- Main Card -->
        <div class="relative bg-white/10 backdrop-blur-xl border border-white/10
                    rounded-3xl overflow-hidden
                    transform transition-all duration-500
                    group-hover:-translate-y-2 group-hover:rotate-1
                    group-hover:border-white/20
                    group-hover:shadow-[0_20px_40px_-10px_rgba(244,63,94,0.3)]">

          <!-- Image Section -->
          <div class="h-48 md:h-56 overflow-hidden relative">
            <img
              src="<%= home.photoUrl || 'https://images.unsplash.com/photo-1615873968403-89e068629265?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80' %>"
              alt="<%= home.houseName %>"
              class="w-full h-full object-cover 
                     transition-transform duration-700
                     group-hover:scale-110"
            />
            
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
            
            <!-- Listing Badge -->
            <div class="absolute top-3 left-3 px-3 py-1.5 rounded-full 
                        bg-black/60 backdrop-blur-sm text-white text-xs font-semibold">
              Active
            </div>
            
            <!-- Performance Badge -->
            <% if (index < 2) { %>
              <div class="absolute top-3 right-3 px-3 py-1.5 rounded-full 
                          bg-gradient-to-r from-rose-500 to-pink-600 
                          text-white text-xs font-semibold">
                ‚≠ê Top Performer
              </div>
            <% } %>
          </div>

          <!-- Content Section -->
          <div class="p-5 md:p-6 space-y-4">
            <!-- Property Info -->
            <div>
              <h3 class="text-lg md:text-xl font-semibold mb-1 
                         group-hover:text-rose-400 transition-colors">
                <%= home.houseName %>
              </h3>
              <div class="flex items-center gap-2 text-gray-400 text-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span><%= home.location %></span>
              </div>
            </div>

            <!-- Performance Metrics -->
            <div class="grid grid-cols-2 gap-4 py-3 border-t border-white/10">
              <div class="space-y-1">
                <p class="text-xs text-gray-500">Daily Rate</p>
                <p class="text-rose-500 font-bold text-lg">
                  ‚Çπ<%= home.price %>
                </p>
              </div>
              <div class="space-y-1">
                <p class="text-xs text-gray-500">Rating</p>
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="font-semibold"><%= home.rating || '4.8' %> ‚òÖ</span>
                </div>
              </div>
            </div>

            <!-- Management Actions -->
            <div class="grid grid-cols-2 gap-3 pt-3">
              <!-- Edit Button -->
              <a href="/host/edit-home/<%= home.id %>?editing=true"
                 class="group/action text-center py-2.5 rounded-xl
                        bg-gradient-to-r from-rose-500/20 to-pink-600/20
                        border border-rose-500/30 text-rose-500 font-semibold 
                        hover:bg-gradient-to-r hover:from-rose-500/30 hover:to-pink-600/30
                        hover:border-rose-500/50
                        transform hover:-translate-y-0.5
                        transition-all duration-300
                        flex items-center justify-center gap-2">
                
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                <span>Edit</span>
              </a>
              
              <!-- Delete Form -->
              <form action="/host/delete-home/<%= home.id %>" method="POST" 
                    onsubmit="return confirm('Are you sure you want to delete this listing? This action cannot be undone.');"
                    class="group/delete">
                <button type="submit"
                        class="w-full text-center py-2.5 rounded-xl
                               bg-white/5 border border-white/10 text-gray-300
                               hover:bg-rose-500/10 hover:border-rose-500/30 hover:text-rose-400
                               transform hover:-translate-y-0.5
                               transition-all duration-300
                               flex items-center justify-center gap-2">
                  
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <span>Delete</span>
                </button>
              </form>
            </div>

            <!-- Quick View Stats -->
            <div class="pt-3 border-t border-white/10">
              <div class="flex items-center justify-between text-xs text-gray-500">
                <span>Listed: <%= new Date().toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %></span>
                <span>Views: <%= Math.floor(Math.random() * 1000) + 100 %></span>
              </div>
            </div>
          </div>
        </div>
      </div>

    <% }) %>

  </div>

  <!-- Summary Section -->
  <div class="pt-8 border-t border-white/10">
    <div class="bg-white/5 rounded-3xl p-6 md:p-8">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
        <div>
          <h3 class="text-lg font-semibold mb-2">Performance Summary</h3>
          <p class="text-gray-400 text-sm">
            Total <%= registeredHomes.length %> listings ‚Ä¢ 
            Average rating: 4.7 ‚òÖ ‚Ä¢ 
            Estimated monthly revenue: ‚Çπ<%= registeredHomes.reduce((sum, home) => sum + (home.price * 15), 0) %>
          </p>
        </div>
        
        <div class="flex gap-3">
          <a href="/host/add-home"
             class="px-5 py-2.5 rounded-xl bg-white/5 border border-white/10 
                    hover:bg-white/10 transition-all duration-300 text-sm font-semibold
                    flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M12 4v16m8-8H4"/>
            </svg>
            Add Another
          </a>
          
          <button class="px-5 py-2.5 rounded-xl 
                       bg-gradient-to-r from-rose-500/20 to-pink-600/20 
                       border border-rose-500/30 text-rose-500 font-semibold
                       hover:bg-gradient-to-r hover:from-rose-500/30 hover:to-pink-600/30
                       transition-all duration-300 text-sm
                       flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
            Export Data
          </button>
        </div>
      </div>
    </div>
  </div>

</section>

<% } %>

