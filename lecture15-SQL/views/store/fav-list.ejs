<%- include('../partials/head') %>

<body class="relative overflow-x-hidden bg-gradient-to-br from-black via-slate-900 to-black text-white">

<%- include('../partials/nav') %>

<main class="relative z-10 px-4 sm:px-6 py-20 md:py-32 space-y-16 md:space-y-32">

<!-- ================= PAGE HERO ================= -->
<section class="max-w-7xl mx-auto space-y-6">
  <!-- Animated Badge -->
  <div class="inline-flex items-center gap-3 px-4 md:px-6 py-2 md:py-3 rounded-full 
              bg-gradient-to-r from-rose-500/20 to-pink-600/20 
              border border-rose-500/30 backdrop-blur-xl
              hover:scale-105 hover:shadow-[0_0_30px_rgba(244,63,94,0.3)]
              transition-all duration-500
              relative overflow-hidden group">
    
    <!-- Shimmer effect -->
    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent 
                -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
    
    <div class="w-2 h-2 rounded-full bg-rose-500 animate-pulse relative z-10"></div>
    <span class="text-xs md:text-sm font-semibold relative z-10">YOUR PRIVATE COLLECTION</span>
  </div>
  
  <!-- Animated Heading -->
  <h1 class="text-4xl md:text-5xl lg:text-6xl font-black tracking-tight">
    <span class="block">Your saved</span>
    <span class="block text-transparent bg-clip-text 
                  bg-gradient-to-r from-rose-500 via-pink-500 to-purple-600 
                  mt-2 hover:animate-pulse transition-all duration-500">
      favourites
    </span>
  </h1>

  <!-- Description with Border Animation -->
  <div class="relative group">
    
    <p class="text-gray-400 text-lg max-w-2xl leading-relaxed pl-6 md:pl-8 
              border-l-2 border-rose-500/50 hover:border-rose-500 
              transition-all duration-500">
      A private collection of homes you've shortlisted.
      Revisit, compare, and book when the moment feels right.
    </p>
  </div>
</section>

<!-- ================= EMPTY STATE ================= -->
<% if (registeredHomes.length === 0) { %>

<section class="max-w-3xl mx-auto text-center mt-32 space-y-8">
  <!-- Animated Heart Icon -->
  <div class="relative inline-block">
    <div class="w-32 h-32 mx-auto mb-8 rounded-3xl 
                bg-gradient-to-r from-rose-500/20 to-pink-600/20 
                border border-rose-500/30 backdrop-blur-xl 
                flex items-center justify-center
                animate-pulse hover:animate-none">
      <svg class="w-16 h-16 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
      </svg>
    </div>
    
    <!-- Floating decorative elements -->
    <div class="absolute -top-4 -right-4 w-6 h-6 rounded-full bg-rose-500/30 animate-bounce"></div>
    <div class="absolute -bottom-4 -left-4 w-4 h-4 rounded-full bg-pink-500/30 animate-bounce" 
         style="animation-delay: 0.2s;"></div>
  </div>

  <p class="text-gray-400 text-xl">
    Your collection is waiting to be filled.
  </p>
  <p class="text-gray-500 text-lg max-w-xl mx-auto">
    Save homes you love by clicking the heart icon on any listing.
  </p>

  <!-- Animated CTA Button -->
  <div class="pt-8">
    <a href="/home-list"
       class="group relative inline-block px-12 py-5 rounded-2xl font-semibold overflow-hidden
              bg-gradient-to-r from-rose-500 to-pink-600
              shadow-[0_0_40px_rgba(244,63,94,0.5)] md:shadow-[0_0_80px_rgba(244,63,94,0.7)]
              hover:shadow-[0_0_60px_rgba(244,63,94,0.8)] md:hover:shadow-[0_0_120px_rgba(244,63,94,0.9)]
              transform hover:-translate-y-2 hover:scale-105
              transition-all duration-500">
      
      <span class="relative z-10 flex items-center justify-center gap-2">
        <span>Explore Homes</span>
        <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" 
             fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
      </span>
      
      <!-- Darker overlay on hover -->
      <div class="absolute inset-0 bg-gradient-to-r from-rose-600 to-pink-700 
                  opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      
      <!-- Shimmer effect -->
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent 
                  -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
    </a>
  </div>
</section>

<% } else { %>

<!-- ================= HOMES GRID ================= -->
<section class="max-w-7xl mx-auto space-y-16">

  <!-- Homes Grid -->
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">

    <% registeredHomes.forEach((home, index) => { %>

      <!-- CARD -->
      <div class="group relative">
        <!-- Hover Glow Effect -->
        <div class="absolute -inset-2 md:-inset-3 
                    bg-gradient-to-r from-rose-500/10 to-pink-600/10 
                    rounded-3xl opacity-0 group-hover:opacity-100 
                    blur-xl transition-opacity duration-500 -z-10"></div>
        
        <!-- Main Card -->
        <div class="relative bg-white/10 backdrop-blur-xl border border-white/10
                    rounded-3xl overflow-hidden
                    transform transition-all duration-500
                    group-hover:-translate-y-2 group-hover:rotate-1
                    group-hover:border-white/20
                    group-hover:shadow-[0_20px_40px_-10px_rgba(244,63,94,0.3)]">

          <!-- Image with Favorite Badge -->
          <div class="h-48 md:h-56 overflow-hidden relative">
            <img
              src="<%= home.photoUrl || 'https://images.unsplash.com/photo-1615873968403-89e068629265?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80' %>"
              alt="<%= home.houseName %>"
              class="w-full h-full object-cover 
                     transition-transform duration-700
                     group-hover:scale-110"
            />
            
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
            
            <!-- Favorite Badge (Always Active) -->
            <div class="absolute top-3 right-3 w-10 h-10 rounded-full 
                        bg-black/60 backdrop-blur-sm 
                        flex items-center justify-center
                        hover:scale-110 transition-transform duration-300
                        animate-pulse">
              <svg class="w-6 h-6 text-rose-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            
            <!-- Price Badge -->
            <div class="absolute bottom-3 left-3 bg-black/60 backdrop-blur-sm 
                        text-white px-3 py-1.5 rounded-full text-sm font-bold">
              ₹<%= home.price %>/night
            </div>
            
            <!-- Superhost Badge -->
            <% if (Math.random() > 0.5) { %>
              <div class="absolute top-3 left-3 bg-gradient-to-r from-rose-500 to-pink-600 
                          text-white px-3 py-1.5 rounded-full text-xs font-semibold">
                ⭐ Superhost
              </div>
            <% } %>
          </div>

          <!-- Content -->
          <div class="p-5 md:p-6 space-y-4">
            <!-- Title and Location -->
            <div>
              <h3 class="text-lg md:text-xl font-semibold mb-1 
                         group-hover:text-rose-400 transition-colors">
                <%= home.houseName %>
              </h3>
              <div class="flex items-center gap-2 text-gray-400 text-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span><%= home.location %></span>
              </div>
            </div>

            <!-- Details -->
            <div class="flex items-center gap-4 text-sm text-gray-400">
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span><%= Math.floor(Math.random() * 14) + 1 %> days min</span>
              </div>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                <span><%= Math.floor(Math.random() * 6) + 2 %> guests</span>
              </div>
            </div>

            <!-- Rating and Price -->
            <div class="flex items-center justify-between pt-3 border-t border-white/10">
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                <span class="font-semibold"><%= home.rating || '4.8' %> ★</span>
                <span class="text-gray-400 text-sm">(<%= Math.floor(Math.random() * 200) + 50 %>)</span>
              </div>
              
              <div class="text-right">
                <p class="text-rose-500 font-bold text-lg 
                          group-hover:scale-110 transition-transform duration-300">
                  ₹<%= home.price %>
                </p>
                <p class="text-gray-400 text-xs">per night</p>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="grid grid-cols-2 gap-3 pt-3">
              <a href="/bookings?home=<%= home._id %>"
                 class="text-center py-2.5 rounded-xl
                        bg-gradient-to-r from-rose-500/20 to-pink-600/20
                        border border-rose-500/30 text-rose-500 font-semibold 
                        hover:bg-gradient-to-r hover:from-rose-500/30 hover:to-pink-600/30
                        hover:border-rose-500/50
                        hover:shadow-[0_0_20px_rgba(244,63,94,0.2)]
                        transform hover:-translate-y-0.5
                        transition-all duration-300
                        flex items-center justify-center gap-2">
                <span>Book Now</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
              </a>
              <form action="/favorite/delete/<%= home.id %>" method="POST">
              <button class="text-center py-2.5 rounded-xl
                           bg-white/5 border border-white/10 text-gray-300
                           hover:bg-white/10 hover:border-white/20
                           transform hover:-translate-y-0.5
                           transition-all duration-300
                           flex items-center justify-center gap-2">
                <span>Remove</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </button>
              </form>
            </div>
          </div>
        </div>
      </div>

    <% }) %>

  </div>

</section>

<% } %>

</main>

<!-- ================= PREMIUM FOOTER ================= -->
<footer class="relative z-10 mt-20 md:mt-40 px-4 md:px-6">
  <div class="max-w-6xl mx-auto py-8 md:py-12 border-t border-white/10">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6 md:gap-8">
      <div class="text-xl md:text-2xl font-bold">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-pink-600">
          Airbnb
        </span>
        <span class="text-xs md:text-sm text-gray-500 ml-2">Favorites</span>
      </div>
      
      <div class="flex flex-wrap justify-center gap-4 md:gap-8">
        <a href="/homes" 
           class="text-gray-400 hover:text-white hover:scale-105 transition-all duration-300 text-sm md:text-base">
          Browse More
        </a>
        <a href="#" 
           class="text-gray-400 hover:text-white hover:scale-105 transition-all duration-300 text-sm md:text-base">
          How to Save
        </a>
        <a href="#" 
           class="text-gray-400 hover:text-white hover:scale-105 transition-all duration-300 text-sm md:text-base">
          Share List
        </a>
        <a href="#" 
           class="text-gray-400 hover:text-white hover:scale-105 transition-all duration-300 text-sm md:text-base">
          Help
        </a>
      </div>
      
      <div class="text-xs md:text-sm text-gray-500 text-center md:text-right">
        © 2025 Airbnb Premium • Your curated collection
      </div>
    </div>
  </div>
</footer>

</body>
</html>