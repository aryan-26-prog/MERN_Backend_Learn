<%- include('../partials/head') %>

<body class="relative overflow-x-hidden bg-gradient-to-br from-black via-slate-900 to-black text-white">

<%- include('../partials/nav') %>

<main class="relative z-10 px-4 sm:px-6 py-20 md:py-32 space-y-16 md:space-y-32">

<!-- ================= HERO ================= -->
<section class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-12 lg:gap-24 items-center">
  
  <!-- Left Content -->
  <div class="space-y-8 md:space-y-10">
    <h1 class="text-4xl sm:text-5xl md:text-[4.5rem] font-black leading-tight tracking-tight">
      <span class="block">Discover</span>
      <span class="block text-transparent bg-clip-text
                   bg-gradient-to-r from-rose-500 via-pink-500 to-purple-600">
        premium homes
      </span>
    </h1>

    <p class="text-base md:text-lg text-gray-300 max-w-xl leading-relaxed">
      Explore verified homes curated for comfort, design,
      and seamless living experiences.
    </p>
    
    <!-- Quick Stats -->
    <div class="grid grid-cols-3 gap-4">
      <div class="text-center group">
        <div class="text-2xl md:text-3xl font-bold text-rose-500 group-hover:scale-110 transition-transform duration-300">
          <%= registeredHomes.length %>
        </div>
        <div class="text-xs md:text-sm text-gray-400">Homes</div>
      </div>
      <div class="text-center group">
        <div class="text-2xl md:text-3xl font-bold text-pink-500 group-hover:scale-110 transition-transform duration-300">
          <%= Math.floor(Math.random() * 50) + 30 %>
        </div>
        <div class="text-xs md:text-sm text-gray-400">Cities</div>
      </div>
      <div class="text-center group">
        <div class="text-2xl md:text-3xl font-bold text-purple-500 group-hover:scale-110 transition-transform duration-300">
          4.8★
        </div>
        <div class="text-xs md:text-sm text-gray-400">Avg Rating</div>
      </div>
    </div>
  </div>

  <!-- Right Image -->
  <div class="group relative mt-8 lg:mt-0">
    <!-- Glow effect -->
    <div class="absolute -inset-2 md:-inset-4 bg-gradient-to-r from-rose-500/30 to-pink-600/30 blur-2xl rounded-[2.5rem] md:rounded-[3rem] opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
    
    <!-- Main Card -->
    <div class="relative rounded-3xl md:rounded-[3rem] overflow-hidden border border-white/20
                transform transition-all duration-700 ease-out
                hover:rotate-1 hover:-translate-y-2 hover:scale-105
                group-hover:shadow-[0_40px_80px_-20px_rgba(244,63,94,0.3)] md:group-hover:shadow-[0_80px_140px_-40px_rgba(0,0,0,0.85)]">

      <img
        src="https://media.cntraveler.com/photos/63c1bf00a20dd5b7d9e22b1e/16:9/w_2580,c_limit/airbnb.jpg"
        alt="Luxury stay"
        class="w-full h-64 sm:h-80 md:h-[400px] object-cover group-hover:scale-110 transition-transform duration-700"
      />

      <div class="absolute inset-0 bg-gradient-to-tr from-black/40 via-transparent to-black/40"></div>
      
      <!-- Floating badge -->
      <div class="absolute top-4 right-4 bg-gradient-to-r from-rose-500 to-pink-600 text-white px-4 py-2 rounded-full text-sm font-semibold">
        Most Booked
      </div>
    </div>
  </div>
</section>


<!-- ================= HOMES GRID ================= -->
<section class="max-w-7xl mx-auto space-y-12 md:space-y-16">

  <!-- Header -->
  <div class="text-center space-y-4">
    <h2 class="text-3xl md:text-4xl font-black">
      Available <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-pink-600">Homes</span>
    </h2>
    <p class="text-gray-400 max-w-2xl mx-auto">
      Discover handpicked properties that match your style and comfort requirements
    </p>
  </div>

  <!-- No Homes Message -->
  <% if (registeredHomes.length === 0) { %>
    <div class="text-center py-20">
      <div class="inline-block p-8 rounded-3xl bg-white/5 border border-white/10">
        <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
        <p class="text-gray-300 text-lg mb-4">
          No homes available yet.
        </p>
        <a href="/host/add-home"
           class="inline-flex items-center gap-2 px-6 py-3 rounded-xl
                  bg-gradient-to-r from-rose-500/20 to-pink-600/20
                  border border-rose-500/30 text-rose-500 font-semibold
                  hover:bg-gradient-to-r hover:from-rose-500/30 hover:to-pink-600/30
                  transition-all duration-300">
          <span>Add Your First Listing</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
        </a>
      </div>
    </div>
  <% } %>

  <!-- Homes Grid -->
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">

    <% registeredHomes.forEach((home, index) => { %>

      <!-- CARD -->
      <div class="group relative">
        <!-- Hover glow -->
        <div class="absolute -inset-2 md:-inset-3 bg-gradient-to-r from-rose-500/10 to-pink-600/10 rounded-3xl opacity-0 group-hover:opacity-100 blur-xl transition-opacity duration-500"></div>
        
        <!-- Main Card -->
        <div class="relative bg-white/10 backdrop-blur-xl border border-white/10
                    rounded-3xl overflow-hidden
                    transform transition-all duration-500
                    group-hover:-translate-y-2 group-hover:rotate-1
                    group-hover:border-white/20
                    group-hover:shadow-[0_20px_40px_-10px_rgba(244,63,94,0.3)]">

          <!-- Image -->
          <div class="h-48 md:h-56 overflow-hidden relative">
            <img
              src="<%= home.photoUrl %>"
              alt="<%= home.houseName %>"
              class="w-full h-full object-cover
                     transition-transform duration-700
                     group-hover:scale-110"
            />
            
            <!-- Gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
            
            <!-- Price badge -->
            <div class="absolute top-3 right-3 bg-black/60 backdrop-blur-sm text-white px-3 py-1.5 rounded-full text-sm font-bold">
              ₹<%= home.price %>/night
            </div>
            
            <!-- Superhost badge -->
            <% if (Math.random() > 0.5) { %>
              <div class="absolute top-3 left-3 bg-gradient-to-r from-rose-500 to-pink-600 text-white px-3 py-1.5 rounded-full text-xs font-semibold">
                ⭐ Superhost
              </div>
            <% } %>
          </div>

          <!-- Content -->
          <div class="p-5 md:p-6 space-y-4">
            <!-- Title and location -->
            <div>
              <h3 class="text-lg md:text-xl font-semibold mb-1 group-hover:text-rose-400 transition-colors">
                <%= home.houseName %>
              </h3>
              <div class="flex items-center gap-2 text-gray-400 text-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span><%= home.location %></span>
              </div>
            </div>

            <!-- Details -->
            <div class="flex items-center gap-4 text-sm text-gray-400">
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span><%= Math.floor(Math.random() * 14) + 1 %> days min</span>
              </div>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                <span><%= Math.floor(Math.random() * 6) + 2 %> guests</span>
              </div>
            </div>

            <!-- Rating and price -->
            <div class="flex items-center justify-between pt-3 border-t border-white/10">
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                <span class="font-semibold"><%= home.rating || '4.8' %> ★</span>
                <span class="text-gray-400 text-sm">(<%= Math.floor(Math.random() * 200) + 50 %>)</span>
              </div>
              
              <div class="text-right">
                <p class="text-rose-500 font-bold text-lg">₹<%= home.price %></p>
                <p class="text-gray-400 text-xs">per night</p>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="grid grid-cols-2 gap-3 mt-4">
              <!-- Details -->
              <a href="/home-list/<%= home.id %>"
                class="text-center
                        bg-gradient-to-r from-rose-500/20 to-pink-600/20
                        border border-rose-500/30 text-rose-500 font-semibold 
                        py-3 rounded-xl
                        hover:bg-gradient-to-r hover:from-rose-500/30 hover:to-pink-600/30
                        hover:border-rose-500/50
                        hover:shadow-[0_0_30px_rgba(244,63,94,0.3)]
                        transform hover:-translate-y-0.5
                        transition-all duration-300
                        flex items-center justify-center gap-2">
                Details
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform"
                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
              </a>

            </div>

          </div>

        </div>
      </div>

    <% }) %>

  </div>

</section>

</main>

<!-- ================= FOOTER ================= -->
<footer class="relative z-10 mt-20 md:mt-40 px-4 md:px-6">
  <div class="max-w-6xl mx-auto py-8 md:py-12 border-t border-white/10">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6 md:gap-8">
      <div class="text-xl md:text-2xl font-bold">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-pink-600">
          Airbnb
        </span>
        <span class="text-xs md:text-sm text-gray-500 ml-2">Homes</span>
      </div>
      
      <div class="flex flex-wrap justify-center gap-4 md:gap-8">
        <a href="#" class="text-gray-400 hover:text-white hover:scale-105 transition-all duration-300 text-sm md:text-base">Help Center</a>
        <a href="#" class="text-gray-400 hover:text-white hover:scale-105 transition-all duration-300 text-sm md:text-base">Safety Info</a>
        <a href="#" class="text-gray-400 hover:text-white hover:scale-105 transition-all duration-300 text-sm md:text-base">Cancellation</a>
        <a href="#" class="text-gray-400 hover:text-white hover:scale-105 transition-all duration-300 text-sm md:text-base">Report</a>
      </div>
      
      <div class="text-xs md:text-sm text-gray-500 text-center md:text-right">
        © 2025 Airbnb Homes • Premium Stays Worldwide
      </div>
    </div>
  </div>
</footer>

</body>
</html>