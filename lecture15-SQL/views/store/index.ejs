<%- include('../partials/head') %>

<body class="relative overflow-x-hidden bg-gradient-to-br from-black via-slate-900 to-black text-white">

<%- include('../partials/nav') %>

<main class="relative z-10 px-4 sm:px-6 py-20 md:py-15 space-y-32 md:space-y-64">

<!-- ================= HERO SECTION ================= -->
<section class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-12 lg:gap-24 items-center">
  
  <!-- LEFT - Text Content -->
  <div class="space-y-8 md:space-y-10 relative">
    <!-- Badge -->
    <div class="inline-flex items-center gap-3 px-4 md:px-6 py-2 md:py-3 rounded-full bg-gradient-to-r from-rose-500/20 to-pink-600/20 border border-rose-500/30 backdrop-blur-xl hover:scale-105 transition-transform duration-300">
      <div class="w-2 h-2 rounded-full bg-rose-500"></div>
      <span class="text-xs md:text-sm font-semibold">TRUSTED BY 8K+ TRAVELERS</span>
    </div>
    
    <!-- Headline -->
    <h1 class="text-5xl sm:text-6xl md:text-[5.5rem] font-black leading-[1.1] md:leading-[1.05] tracking-tight">
      <span class="block relative group">
        STAY.
        <span class="absolute -bottom-2 md:-bottom-4 left-0 w-24 md:w-32 h-1 bg-gradient-to-r from-rose-500 to-pink-600 rounded-full transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></span>
      </span>
      <span class="block text-transparent bg-clip-text bg-gradient-to-r from-rose-500 via-pink-500 to-purple-600 mt-2 md:mt-4">
        REIMAGINED.
      </span>
    </h1>
    
    <!-- Description -->
    <div class="relative">
      <p class="text-lg md:text-xl text-gray-300 max-w-xl leading-relaxed pl-6 md:pl-8 border-l-2 border-rose-500/50 hover:border-rose-500 transition-colors duration-300">
        Experience the future of travel with homes curated for the modern explorer. 
        Every stay tells a story, every host becomes family.
      </p>
    </div>
    
    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 md:gap-6 relative z-20">
      <a href="/homes" 
         class="group relative px-8 md:px-14 py-4 md:py-6 rounded-2xl font-semibold overflow-hidden
                bg-gradient-to-r from-rose-500 to-pink-600
                shadow-[0_0_40px_rgba(244,63,94,0.5)] md:shadow-[0_0_80px_rgba(244,63,94,0.7)]
                hover:shadow-[0_0_60px_rgba(244,63,94,0.8)] md:hover:shadow-[0_0_120px_rgba(244,63,94,0.9)]
                transition-all duration-500
                transform hover:-translate-y-1 md:hover:-translate-y-2 hover:scale-105">
        <span class="relative z-10">Explore Homes</span>
        <div class="absolute inset-0 bg-gradient-to-r from-rose-600 to-pink-700 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="absolute -inset-1 bg-gradient-to-r from-rose-400 to-pink-500 blur-xl opacity-0 group-hover:opacity-30 transition-opacity duration-500"></div>
      </a>
      
      <a href="/host/add-home"
         class="group relative px-8 md:px-14 py-4 md:py-6 rounded-2xl font-semibold overflow-hidden
                bg-white/10 backdrop-blur-xl border border-white/20
                hover:bg-white/20 hover:border-white/40 transition-all duration-500
                transform hover:-translate-y-1 md:hover:-translate-y-2 hover:scale-105">
        <span class="relative z-10">Become a Host</span>
        <div class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/10 to-white/0 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
      </a>
    </div>
  </div>
  
  <!-- RIGHT - Property Card -->
  <div class="group relative mt-8 lg:mt-0">
    <!-- Glow effect -->
    <div class="absolute -inset-2 md:-inset-4 bg-gradient-to-r from-rose-500/30 to-pink-600/30 blur-2xl rounded-[2.5rem] md:rounded-[3.5rem] opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
    
    <!-- Main Card -->
    <div class="relative rounded-3xl md:rounded-[3rem] overflow-hidden border border-white/20
                transform transition-all duration-700 ease-out
                hover:rotate-1 hover:-translate-y-2 hover:scale-105
                group-hover:shadow-[0_40px_80px_-20px_rgba(244,63,94,0.3)] md:group-hover:shadow-[0_120px_200px_-60px_rgba(244,63,94,0.5)]">
      
      <!-- Image -->
      <div class="overflow-hidden">
        <img 
          src="https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80"
          alt="Premium Airbnb Stay"
          class="w-full h-64 sm:h-80 md:h-[600px] object-cover scale-110 group-hover:scale-100 transition-transform duration-700"
        />
      </div>
      
      <!-- Gradient overlay -->
      <div class="absolute inset-0 bg-gradient-to-tr from-black/60 via-transparent to-black/40"></div>
      
      <!-- Floating info card -->
      <div class="absolute bottom-4 md:bottom-8 left-4 md:left-8 right-4 md:right-8 bg-white/10 backdrop-blur-xl rounded-2xl p-4 md:p-6 border border-white/20
                  transform translate-y-2 md:translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
        <div class="flex justify-between items-center">
          <div>
            <h4 class="font-bold text-lg md:text-xl">Ocean View Villa</h4>
            <p class="text-gray-300 text-sm">Bali • 4.98 ★</p>
          </div>
          <div class="text-xl md:text-2xl font-bold text-rose-500">$289<span class="text-sm font-normal text-gray-300">/night</span></div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- ================= FEATURES ================= -->
<section class="max-w-6xl mx-auto space-y-16 md:space-y-24">
  <div class="text-center space-y-4 md:space-y-6">
    <h2 class="text-3xl sm:text-4xl md:text-5xl font-black">
      Why <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-pink-600">Airbnb</span> Redefines Travel
    </h2>
    <p class="text-gray-400 text-base md:text-lg max-w-3xl mx-auto px-4">
      We've rebuilt the travel experience from the ground up—focusing on connection, 
      authenticity, and seamless technology.
    </p>
  </div>
  
  <div class="grid md:grid-cols-3 gap-6 md:gap-8 px-4">
    <% const features = [
      {
        title: "Curated Excellence",
        desc: "Every property undergoes a 150-point verification process ensuring premium quality.",
        icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
        color: "rose"
      },
      {
        title: "Smart Matching",
        desc: "Our AI learns your preferences to recommend perfect stays matching your style.",
        icon: "M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z",
        color: "pink"
      },
      {
        title: "Seamless Experience",
        desc: "From digital check-ins to 24/7 concierge support for hassle-free stays.",
        icon: "M13 10V3L4 14h7v7l9-11h-7z",
        color: "purple"
      }
    ]; %>
    
    <% features.forEach((feature, index) => { %>
      <div class="group relative">
        <!-- Hover glow -->
        <div class="absolute -inset-2 md:-inset-4 bg-gradient-to-r from-<%= feature.color %>-500/10 to-<%= feature.color %>-600/10 rounded-3xl md:rounded-[2.5rem] 
                    opacity-0 group-hover:opacity-100 blur-xl transition-opacity duration-500"></div>
        
        <!-- Feature Card -->
        <div class="relative rounded-3xl md:rounded-[2.5rem] p-6 md:p-10 border border-white/20
                    bg-gradient-to-b from-white/5 to-white/0 backdrop-blur-xl
                    transform transition-all duration-500 ease-out
                    group-hover:-translate-y-2 group-hover:rotate-1
                    group-hover:shadow-[0_20px_40px_-10px_rgba(244,63,94,0.3)]">
          
          <!-- Icon -->
          <div class="mb-6 md:mb-8 relative">
            <div class="w-12 h-12 md:w-16 md:h-16 rounded-2xl bg-gradient-to-r from-<%= feature.color %>-500/20 to-<%= feature.color %>-600/20 
                        flex items-center justify-center border border-<%= feature.color %>-500/30">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-<%= feature.color %>-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= feature.icon %>"/>
              </svg>
            </div>
            <div class="absolute -top-2 -right-2 w-6 h-6 rounded-full bg-gradient-to-r from-<%= feature.color %>-500 to-<%= feature.color %>-600 
                        text-xs flex items-center justify-center font-bold">
              <%= index + 1 %>
            </div>
          </div>
          
          <h3 class="text-xl md:text-2xl font-bold mb-3 md:mb-4">
            <span class="bg-gradient-to-r from-<%= feature.color %>-500 to-<%= feature.color %>-600 bg-clip-text text-transparent">
              <%= feature.title %>
            </span>
          </h3>
          
          <p class="text-gray-300 text-sm md:text-base leading-relaxed mb-6">
            <%= feature.desc %>
          </p>
          
          <!-- Learn more link -->
          <a href="#" class="inline-flex items-center gap-2 text-<%= feature.color %>-500 font-semibold text-sm md:text-base group/link">
            Learn more
            <svg class="w-4 h-4 transform group-hover/link:translate-x-2 transition-transform duration-300" 
                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </a>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<!-- ================= GLOBAL REACH ================= -->
<section class="max-w-6xl mx-auto space-y-16 md:space-y-24 px-4">
  <div class="text-center space-y-4 md:space-y-6">
    <h2 class="text-3xl sm:text-4xl md:text-5xl font-black">
      Global <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-pink-600">Reach</span>,
      Local <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-blue-600">Touch</span>
    </h2>
    <p class="text-gray-400 text-base md:text-lg max-w-3xl mx-auto">
      From Tokyo townhouses to Parisian apartments, discover unique stays in 120+ countries
    </p>
  </div>
  
  <!-- Globe Section -->
  <div class="relative h-64 sm:h-80 md:h-[500px] rounded-3xl md:rounded-[3rem] overflow-hidden border border-white/20
              bg-gradient-to-br from-slate-900/50 to-black/50 backdrop-blur-xl">
    
    <!-- Globe Visualization -->
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="relative w-48 h-48 sm:w-64 sm:h-64">
        <!-- Rings -->
        <div class="absolute inset-0 rounded-full border-2 border-rose-500/30"></div>
        <div class="absolute inset-8 rounded-full border border-pink-500/20"></div>
        <div class="absolute inset-16 rounded-full border border-purple-500/10"></div>
        
        <!-- Location Dots -->
        <div class="absolute top-1/4 left-3/4 w-3 h-3 rounded-full bg-rose-500"></div>
        <div class="absolute top-1/2 left-1/4 w-3 h-3 rounded-full bg-pink-500"></div>
        <div class="absolute bottom-1/4 left-1/2 w-3 h-3 rounded-full bg-purple-500"></div>
        <div class="absolute top-1/3 right-1/3 w-3 h-3 rounded-full bg-blue-500"></div>
      </div>
    </div>
    
    <!-- Destination Cards -->
    <div class="absolute top-4 left-4 md:top-10 md:left-10 bg-white/10 backdrop-blur-xl rounded-2xl p-4 md:p-6 border border-white/20
                transform hover:-translate-y-1 transition-transform duration-300 w-48 md:w-64">
      <h4 class="font-bold text-base md:text-lg mb-1 md:mb-2">Tokyo, Japan</h4>
      <p class="text-gray-300 text-xs md:text-sm">450+ premium stays</p>
      <div class="mt-2 md:mt-4 text-rose-500 font-bold text-base md:text-lg">From $89/night</div>
    </div>
    
    <div class="absolute bottom-4 right-4 md:bottom-10 md:right-10 bg-white/10 backdrop-blur-xl rounded-2xl p-4 md:p-6 border border-white/20
                transform hover:-translate-y-1 transition-transform duration-300 w-48 md:w-64">
      <h4 class="font-bold text-base md:text-lg mb-1 md:mb-2">Paris, France</h4>
      <p class="text-gray-300 text-xs md:text-sm">380+ curated apartments</p>
      <div class="mt-2 md:mt-4 text-rose-500 font-bold text-base md:text-lg">From $129/night</div>
    </div>
  </div>
</section>

<!-- ================= HOW IT WORKS ================= -->
<section class="max-w-6xl mx-auto space-y-16 md:space-y-24 px-4">
  <div class="text-center space-y-4 md:space-y-6">
    <h2 class="text-3xl sm:text-4xl md:text-5xl font-black">
      The <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-pink-600">Journey</span>,
      Simplified
    </h2>
    <p class="text-gray-400 text-base md:text-lg max-w-3xl mx-auto">
      From dreaming to checking out—experience the most seamless travel flow ever designed
    </p>
  </div>
  
  <!-- Steps -->
  <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
    <% const steps = [
      { step: "01", title: "Dream", desc: "Find perfect stays matching your vibe and budget" },
      { step: "02", title: "Book", desc: "Secure booking with flexible cancellation policies" },
      { step: "03", title: "Experience", desc: "Digital check-in and premium amenities await" },
      { step: "04", title: "Share", desc: "Leave reviews and earn travel credits" }
    ]; %>
    
    <% steps.forEach(step => { %>
      <div class="group relative">
        <!-- Connecting line for desktop -->
        <div class="hidden lg:block absolute top-1/2 right-0 w-full h-0.5 bg-gradient-to-r from-rose-500/30 to-transparent group-last:hidden"></div>
        
        <!-- Step Card -->
        <div class="relative bg-white/10 backdrop-blur-xl border border-white/20 rounded-3xl p-6 md:p-8
                    transform transition-all duration-500
                    hover:-translate-y-2 hover:border-rose-500/30 hover:shadow-[0_20px_40px_-10px_rgba(244,63,94,0.3)]">
          
          <!-- Step indicator -->
          <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-gradient-to-r from-rose-500/20 to-pink-600/20 
                      border border-rose-500/30 mb-4 group-hover:scale-110 transition-transform duration-300">
            <span class="text-xs font-bold text-rose-500">STEP <%= step.step %></span>
            <div class="w-1.5 h-1.5 rounded-full bg-rose-500"></div>
          </div>
          
          <h3 class="text-xl md:text-2xl font-bold mb-3">
            <span class="bg-gradient-to-r from-rose-500 to-pink-600 bg-clip-text text-transparent">
              <%= step.title %>
            </span>
          </h3>
          
          <p class="text-gray-300 text-sm md:text-base leading-relaxed mb-6">
            <%= step.desc %>
          </p>
          
          <!-- Hover arrow -->
          <div class="inline-flex items-center gap-1 text-rose-500 text-sm font-semibold opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <span>Explore</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<!-- ================= STATS ================= -->
<section class="max-w-6xl mx-auto px-4">
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-8">
    <% const stats = [
      { value: "8,500+", label: "Verified Homes", color: "rose" },
      { value: "120+", label: "Countries", color: "pink" },
      { value: "4.92", label: "Avg Rating", color: "purple", suffix: "★" },
      { value: "98.7%", label: "Satisfaction", color: "blue" }
    ]; %>
    
    <% stats.forEach(stat => { %>
      <div class="group">
        <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl p-6 md:p-8 text-center
                    transform transition-all duration-500
                    group-hover:-translate-y-2 group-hover:border-<%= stat.color %>-500/30
                    group-hover:shadow-[0_20px_40px_-10px] group-hover:shadow-<%= stat.color %>-500/20">
          
          <div class="relative inline-block">
            <div class="text-3xl md:text-4xl font-black mb-2 group-hover:scale-110 transition-transform duration-300">
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-<%= stat.color %>-500 to-<%= stat.color %>-600">
                <%= stat.value %><%= stat.suffix || '' %>
              </span>
            </div>
          </div>
          
          <p class="text-xs md:text-sm text-gray-400 uppercase tracking-wider">
            <%= stat.label %>
          </p>
          
          <!-- Progress bar for rating -->
          <% if (stat.label.includes("Rating")) { %>
            <div class="mt-4 h-1 bg-white/10 rounded-full overflow-hidden">
              <div class="h-full bg-gradient-to-r from-<%= stat.color %>-500 to-<%= stat.color %>-600 rounded-full 
                          group-hover:w-full w-4/5 transition-all duration-1000"></div>
            </div>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<!-- ================= FINAL CTA ================= -->
<section class="max-w-5xl mx-auto px-4">
  <div class="relative rounded-3xl md:rounded-[3.5rem] overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 bg-gradient-to-r from-rose-500/30 via-pink-600/30 to-purple-600/30"></div>
    
    <!-- Main content -->
    <div class="relative p-8 md:p-20 text-center z-10">
      <h2 class="text-3xl sm:text-4xl md:text-6xl font-black mb-6 md:mb-8">
        <span class="block">Ready to</span>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-white via-white to-rose-200">
          Redefine Your Journey?
        </span>
      </h2>
      
      <p class="text-base md:text-xl text-white/90 mb-8 md:mb-12 max-w-3xl mx-auto">
        Join a community of modern travelers and hosts shaping the future of 
        authentic, connected experiences worldwide.
      </p>
      
      <!-- CTA buttons -->
      <div class="flex flex-col sm:flex-row justify-center gap-4 md:gap-8">
        <a href="/homes"
           class="group relative px-8 md:px-16 py-4 md:py-6 rounded-2xl font-bold overflow-hidden
                  bg-white text-black
                  transform transition-all duration-500
                  hover:-translate-y-2 hover:scale-105
                  hover:shadow-[0_20px_40px_-10px_rgba(255,255,255,0.3)] md:hover:shadow-[0_40px_80px_-20px_rgba(255,255,255,0.5)]">
          <span class="relative z-10">Start Exploring</span>
          <div class="absolute inset-0 bg-gradient-to-r from-rose-100 to-pink-100 opacity-0 
                      group-hover:opacity-100 transition-opacity duration-500"></div>
        </a>
        
        <a href="/host/add-home"
           class="group relative px-8 md:px-16 py-4 md:py-6 rounded-2xl font-bold overflow-hidden
                  bg-transparent border-2 border-white/30 text-white
                  transform transition-all duration-500
                  hover:-translate-y-2 hover:scale-105 hover:border-white
                  hover:shadow-[0_20px_40px_-10px_rgba(255,255,255,0.2)]">
          <span class="relative z-10">Become a Host</span>
          <div class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/10 to-white/0 -translate-x-full 
                      group-hover:translate-x-full transition-transform duration-1000"></div>
        </a>
      </div>
      
      <!-- Trust badges -->
      <div class="flex flex-wrap justify-center gap-6 md:gap-12 mt-8 md:mt-16">
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 md:w-3 md:h-3 rounded-full bg-green-500"></div>
          <span class="text-xs md:text-sm text-gray-300">SSL Secure</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 md:w-3 md:h-3 rounded-full bg-blue-500"></div>
          <span class="text-xs md:text-sm text-gray-300">24/7 Support</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 md:w-3 md:h-3 rounded-full bg-purple-500"></div>
          <span class="text-xs md:text-sm text-gray-300">Verified Hosts</span>
        </div>
      </div>
    </div>
  </div>
</section>

</main>

<!-- ================= FOOTER ================= -->
<footer class="relative z-10 mt-20 md:mt-40 px-4 md:px-6">
  <div class="max-w-6xl mx-auto py-8 md:py-12 border-t border-white/10">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6 md:gap-8">
      <div class="text-xl md:text-2xl font-bold">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-pink-600">
          Airbnb
        </span>
        <span class="text-xs md:text-sm text-gray-500 ml-2">Premium</span>
      </div>
      
      <div class="flex flex-wrap justify-center gap-4 md:gap-8">
        <a href="#" class="text-gray-400 hover:text-white hover:scale-105 transition-all duration-300 text-sm md:text-base">Privacy</a>
        <a href="#" class="text-gray-400 hover:text-white hover:scale-105 transition-all duration-300 text-sm md:text-base">Terms</a>
        <a href="#" class="text-gray-400 hover:text-white hover:scale-105 transition-all duration-300 text-sm md:text-base">Sitemap</a>
        <a href="#" class="text-gray-400 hover:text-white hover:scale-105 transition-all duration-300 text-sm md:text-base">Careers</a>
      </div>
      
      <div class="text-xs md:text-sm text-gray-500 text-center md:text-right">
        © 2025 Airbnb Premium • Redefining travel experiences
      </div>
    </div>
  </div>
</footer>

</body>
</html>