<%- include('../partials/head') %>

<body class="relative overflow-x-hidden bg-gradient-to-br from-black via-slate-900 to-black text-white">

<%- include('../partials/nav') %>

<!-- Floating Particles Background -->
<div class="fixed inset-0 overflow-hidden pointer-events-none z-0">
  <div class="absolute top-1/4 left-1/4 w-64 h-64 rounded-full bg-gradient-to-r from-rose-500/10 to-pink-600/10 blur-3xl"></div>
  <div class="absolute bottom-1/4 right-1/4 w-64 h-64 rounded-full bg-gradient-to-r from-purple-500/10 to-blue-600/10 blur-3xl"></div>
</div>

<main class="relative z-10 px-4 sm:px-6 py-20 md:py-28 space-y-28">

<!-- ================= PREMIUM HERO ================= -->
<section class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-16 items-center">

  <!-- LEFT CONTENT -->
  <div class="space-y-8 md:space-y-10 relative">
    <!-- Animated Badge -->
    <div class="inline-flex items-center gap-3 px-5 py-3 rounded-full 
                bg-gradient-to-r from-rose-500/20 to-pink-600/20 
                border border-rose-500/30 backdrop-blur-xl
                hover:scale-105 hover:shadow-[0_0_30px_rgba(244,63,94,0.3)]
                transition-all duration-500
                relative overflow-hidden group">
      
      <!-- Shimmer effect -->
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent 
                  -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
      
      <div class="w-2 h-2 rounded-full bg-rose-500 animate-pulse relative z-10"></div>
      <span class="text-sm font-semibold relative z-10">
        <%= editing ? "EDITING MODE" : "NEW LISTING" %>
      </span>
    </div>
    
    <!-- Animated Heading -->
    <h1 class="text-4xl sm:text-5xl md:text-[4.2rem] font-black leading-tight tracking-tight">
      <span class="block">
        <%= editing ? "Refine" : "Create" %>
      </span>
      <span class="block text-transparent bg-clip-text
                   bg-gradient-to-r from-rose-500 via-pink-500 to-purple-600
                   hover:animate-pulse transition-all duration-500">
        your masterpiece
      </span>
    </h1>

    <!-- Description with Border -->
    <div class="relative group">
      
      <p class="text-gray-400 text-lg max-w-xl leading-relaxed pl-6 md:pl-8 
                border-l-2 border-rose-500/50 hover:border-rose-500 
                transition-all duration-500">
        <%= editing 
          ? "Update every detail to showcase your property's best features and attract premium guests."
          : "Share your unique space with travelers seeking authentic experiences and premium stays."
        %>
      </p>
    </div>

    <!-- Progress Indicator -->
    <% if (editing) { %>
      <div class="flex items-center gap-4 px-5 py-4 rounded-2xl
                  bg-white/5 border border-white/10 backdrop-blur-xl
                  hover:scale-105 transition-transform duration-300">
        <div class="w-10 h-10 rounded-full bg-gradient-to-r from-rose-500/20 to-pink-600/20 
                    flex items-center justify-center">
          <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        </div>
        <div>
          <p class="font-semibold text-gray-300">Editing existing listing</p>
          <p class="text-gray-500 text-sm">Make changes to boost visibility</p>
        </div>
      </div>
    <% } else { %>
      <!-- Quick Stats -->
      <div class="grid grid-cols-3 gap-4 pt-4">
        <div class="text-center group">
          <div class="text-2xl font-bold text-rose-500 group-hover:scale-110 transition-transform duration-300">
            3
          </div>
          <div class="text-xs text-gray-400">Simple Steps</div>
        </div>
        <div class="text-center group">
          <div class="text-2xl font-bold text-pink-500 group-hover:scale-110 transition-transform duration-300">
            5min
          </div>
          <div class="text-xs text-gray-400">Average Time</div>
        </div>
        <div class="text-center group">
          <div class="text-2xl font-bold text-purple-500 group-hover:scale-110 transition-transform duration-300">
            40%↑
          </div>
          <div class="text-xs text-gray-400">More Bookings</div>
        </div>
      </div>
    <% } %>
  </div>

  <!-- RIGHT IMAGE CARD -->
  <div class="relative group hidden lg:block">
    <!-- Glow effect -->
    <div class="absolute -inset-4 bg-gradient-to-r from-rose-500/30 to-pink-600/30
                blur-2xl rounded-[3rem] opacity-0 group-hover:opacity-100 
                transition-opacity duration-700 -z-10"></div>

    <!-- Main Image Card -->
    <div class="relative rounded-[3rem] overflow-hidden border border-white/20
                transform transition-all duration-700 ease-out
                hover:rotate-1 hover:-translate-y-2 hover:scale-105
                group-hover:shadow-[0_40px_80px_-20px_rgba(244,63,94,0.3)]">
      
      <img
        src="<%= home?.photoUrl || 'https://images.unsplash.com/photo-1613490493576-7fde63acd811?ixlib=rb-4.0.3&auto=format&fit=crop&w=2071&q=80' %>"
        class="w-full h-[380px] object-cover scale-110 group-hover:scale-100 transition-transform duration-1000"
      />
      
      <!-- Gradient overlay -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-black/30"></div>
      
      <!-- Preview overlay -->
      <div class="absolute bottom-6 left-6 right-6 bg-white/10 backdrop-blur-xl 
                  rounded-2xl p-4 border border-white/20
                  transform translate-y-2 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 
                  transition-all duration-500">
        <p class="text-sm font-semibold">Preview</p>
        <p class="text-gray-400 text-xs">Hover to see image effect</p>
      </div>
    </div>
    
    <!-- Floating decorative elements -->
    <div class="absolute -top-3 -right-3 w-8 h-8 rounded-full bg-gradient-to-r from-rose-500 to-pink-600 
                animate-bounce shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    <div class="absolute -bottom-2 -left-2 w-6 h-6 rounded-full bg-gradient-to-r from-purple-500 to-blue-600
                animate-bounce shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500" 
         style="animation-delay: 0.2s;"></div>
  </div>

</section>

<!-- ================= PREMIUM FORM ================= -->
<section class="max-w-5xl mx-auto">

  <!-- Form Container with Glow -->
  <div class="relative">
    <!-- Background glow -->
    <div class="absolute -inset-6 bg-gradient-to-r from-rose-500/20 to-pink-600/20 
                blur-2xl rounded-[3rem] opacity-0 hover:opacity-100 transition-opacity duration-700 -z-10"></div>
    
    <!-- Main Form Card -->
    <div class="relative bg-white/10 backdrop-blur-xl border border-white/10 
                rounded-[2.5rem] p-8 md:p-12
                transform transition-all duration-500
                hover:border-white/20
                hover:shadow-[0_40px_120px_-40px_rgba(244,63,94,0.4)]">

      <!-- Form Header -->
      <div class="mb-10">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 rounded-2xl bg-gradient-to-r from-rose-500/20 to-pink-600/20 
                      flex items-center justify-center">
            <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold">Property Details</h2>
        </div>
        <p class="text-gray-400 max-w-xl">
          Fill in the details below to create an irresistible listing that stands out.
          <span class="text-rose-400 font-semibold">All fields are required.</span>
        </p>
      </div>

      <form
        action="/host/<%= editing ? 'edit-home' : 'add-home' %>"
        method="POST"
        class="grid md:grid-cols-2 gap-8">

        <% if (editing) { %>
          <input type="hidden" name="homeId" value="<%= home.id %>" />
        <% } %>

        <!-- Home Name -->
        <div class="group">
          <label class="block text-sm font-semibold text-gray-400 mb-3
                       flex items-center gap-2">
            <svg class="w-4 h-4 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
            Home name
          </label>
          <input
            type="text"
            name="houseName"
            value="<%= home?.houseName || '' %>"
            required
            placeholder="e.g., Serenity Villa with Ocean View"
            class="w-full px-5 py-4 rounded-xl bg-black/40 border border-white/10 
                   text-white placeholder-gray-500
                   focus:ring-2 focus:ring-rose-500 focus:border-transparent 
                   outline-none transition-all duration-300
                   group-hover:border-white/20"
          />
          <p class="text-gray-500 text-xs mt-2 opacity-0 group-hover:opacity-100 transition-opacity">
            Choose a catchy, descriptive name
          </p>
        </div>

        <!-- Price -->
        <div class="group">
          <label class="block text-sm font-semibold text-gray-400 mb-3
                       flex items-center gap-2">
            <svg class="w-4 h-4 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Price per night (₹)
          </label>
          <div class="relative">
            <span class="absolute left-4 top-1/2 transform -translate-y-1/2 
                        text-gray-400 font-semibold">₹</span>
            <input
              type="number"
              name="price"
              value="<%= home?.price || '' %>"
              required
              placeholder="2500"
              class="w-full px-12 py-4 rounded-xl bg-black/40 border border-white/10 
                     text-white placeholder-gray-500
                     focus:ring-2 focus:ring-rose-500 focus:border-transparent 
                     outline-none transition-all duration-300
                     group-hover:border-white/20"
            />
          </div>
          <p class="text-gray-500 text-xs mt-2 opacity-0 group-hover:opacity-100 transition-opacity">
            Competitive pricing increases bookings
          </p>
        </div>

        <!-- Location -->
        <div class="group">
          <label class="block text-sm font-semibold text-gray-400 mb-3
                       flex items-center gap-2">
            <svg class="w-4 h-4 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Location
          </label>
          <input
            type="text"
            name="location"
            value="<%= home?.location || '' %>"
            required
            placeholder="e.g., Goa, India"
            class="w-full px-5 py-4 rounded-xl bg-black/40 border border-white/10 
                   text-white placeholder-gray-500
                   focus:ring-2 focus:ring-rose-500 focus:border-transparent 
                   outline-none transition-all duration-300
                   group-hover:border-white/20"
          />
          <p class="text-gray-500 text-xs mt-2 opacity-0 group-hover:opacity-100 transition-opacity">
            City, State, Country
          </p>
        </div>

        <!-- Rating -->
        <div class="group">
          <label class="block text-sm font-semibold text-gray-400 mb-3
                       flex items-center gap-2">
            <svg class="w-4 h-4 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.539-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
            Rating (1-5)
          </label>
          <input
            type="number"
            step="0.1"
            min="1"
            max="5"
            name="rating"
            value="<%= home?.rating || '4.5' %>"
            required
            placeholder="4.5"
            class="w-full px-5 py-4 rounded-xl bg-black/40 border border-white/10 
                   text-white placeholder-gray-500
                   focus:ring-2 focus:ring-rose-500 focus:border-transparent 
                   outline-none transition-all duration-300
                   group-hover:border-white/20"
          />
          <div class="flex gap-1 mt-2">
            <% for(let i=1; i<=5; i++) { %>
              <svg class="w-4 h-4 <%= i <= (home?.rating || 4.5) ? 'text-yellow-500' : 'text-gray-700' %>" 
                   fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            <% } %>
          </div>
        </div>

        <!-- Photo URL -->
        <div class="md:col-span-2 group">
          <label class="block text-sm font-semibold text-gray-400 mb-3
                       flex items-center gap-2">
            <svg class="w-4 h-4 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            Photo URL
          </label>
          <input
            type="text"
            name="photoUrl"
            value="<%= home?.photoUrl || '' %>"
            required
            placeholder="https://example.com/your-image.jpg"
            class="w-full px-5 py-4 rounded-xl bg-black/40 border border-white/10 
                   text-white placeholder-gray-500
                   focus:ring-2 focus:ring-rose-500 focus:border-transparent 
                   outline-none transition-all duration-300
                   group-hover:border-white/20"
          />
          <p class="text-gray-500 text-xs mt-2 opacity-0 group-hover:opacity-100 transition-opacity">
            Use high-quality images for better engagement
          </p>
          
          <!-- Image Preview -->
          <% if (home?.photoUrl) { %>
            <div class="mt-4 p-4 rounded-xl bg-black/30 border border-white/10">
              <p class="text-sm text-gray-400 mb-2">Current Image Preview:</p>
              <img src="<%= home.photoUrl %>" 
                   class="w-full h-40 object-cover rounded-lg"
                   onerror="this.style.display='none'">
            </div>
          <% } %>
        </div>

        <!-- Additional Fields -->
        <div class="md:col-span-2 grid md:grid-cols-2 gap-8 pt-4">
          <!-- Description -->
          <div class="group">
            <label class="block text-sm font-semibold text-gray-400 mb-3">
              Description
            </label>

            <textarea
              name="description"
              rows="4"
              placeholder="Describe what makes your place special..."
              class="w-full px-5 py-4 rounded-xl bg-black/40 border border-white/10 
                    text-white placeholder-gray-500 resize-none
                    focus:ring-2 focus:ring-rose-500 focus:border-transparent 
                    outline-none transition-all duration-300
                    group-hover:border-white/20"
            ><%= home?.description || "" %></textarea>
          </div>

          
          <!-- Amenities -->
          <div class="group">
            <label class="block text-sm font-semibold text-gray-400 mb-3">
              Key Amenities
            </label>
            <div class="space-y-3">
              <% const amenities = ['WiFi', 'Parking', 'Pool', 'Kitchen', 'AC', 'TV']; %>
              <% amenities.forEach(amenity => { %>
                <label class="flex items-center gap-3 cursor-pointer">
                  <input type="checkbox" name="amenities" value="<%= amenity %>"
                         class="w-5 h-5 rounded bg-black/40 border border-white/10 
                                checked:bg-rose-500 checked:border-rose-500
                                focus:ring-2 focus:ring-rose-500">
                  <span class="text-gray-300"><%= amenity %></span>
                </label>
              <% }) %>
            </div>
          </div>
        </div>

        <!-- FORM ACTIONS -->
        <div class="md:col-span-2 pt-10 border-t border-white/10">
          <div class="flex flex-col sm:flex-row gap-4">
            <!-- Submit Button -->
            <button
              type="submit"
              class="group flex-1 relative bg-gradient-to-r from-rose-500 to-pink-600
                     py-5 rounded-2xl font-bold text-lg
                     shadow-[0_0_50px_rgba(244,63,94,0.6)]
                     hover:shadow-[0_0_80px_rgba(244,63,94,0.8)]
                     transform hover:-translate-y-1 hover:scale-105
                     transition-all duration-500
                     flex items-center justify-center gap-3">
              
              <!-- Icon -->
              <svg class="w-6 h-6 transform group-hover:rotate-12 transition-transform duration-500" 
                   fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="<%= editing ? 'M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z' : 'M12 19l9 2-9-18-9 18 9-2zm0 0v-8' %>"/>
              </svg>
              
              <span class="relative z-10">
                <%= editing ? "Update Home" : "Publish Listing" %>
              </span>
            </button>

            <!-- Cancel Button -->
            <a href="/host/host-home-list"
               class="group flex-1 text-center py-5 rounded-2xl
                      bg-white/5 border border-white/10
                      hover:bg-white/10 hover:border-white/20
                      transform hover:-translate-y-1
                      transition-all duration-500
                      flex items-center justify-center gap-3">
              
              <svg class="w-6 h-6 text-gray-400 transform group-hover:-translate-x-1 
                         transition-transform duration-500" 
                   fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              
              <span>Back to Dashboard</span>
            </a>
          </div>
          
          <!-- Form Note -->
          <p class="text-center text-gray-500 text-sm mt-6">
            <%= editing 
              ? "Changes may take a few minutes to reflect across the platform."
              : "Your listing will be reviewed within 24 hours."
            %>
          </p>
        </div>

      </form>
    </div>
  </div>

</section>

</main>

<!-- ================= PREMIUM FOOTER ================= -->
<footer class="relative z-10 mt-32 px-4 md:px-6">
  <div class="max-w-6xl mx-auto py-8 border-t border-white/10">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="text-xl md:text-2xl font-bold">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-rose-500 to-pink-600">
          Airbnb
        </span>
        <span class="text-sm text-gray-500 ml-2">Host Portal</span>
      </div>
      
      <div class="flex gap-6">
        <a href="#" class="text-gray-400 hover:text-white hover:scale-105 
                         transition-all duration-300 text-sm">Help</a>
        <a href="#" class="text-gray-400 hover:text-white hover:scale-105 
                         transition-all duration-300 text-sm">Terms</a>
        <a href="#" class="text-gray-400 hover:text-white hover:scale-105 
                         transition-all duration-300 text-sm">Privacy</a>
      </div>
      
      <div class="text-xs md:text-sm text-gray-500 text-center md:text-right">
        © 2025 Airbnb Premium • Professional Hosting Tools
      </div>
    </div>
  </div>
</footer>

</body>
</html>